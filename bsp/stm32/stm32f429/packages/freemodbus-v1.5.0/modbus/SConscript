from building import *

cwd = GetCurrentDir()
src = Glob('*.c')
src += Glob('functions/*.c')
src += Glob('rtu/*.c')
CPPPATH = [cwd, str(Dir('#'))]
CPPPATH += [cwd]
CPPPATH += [cwd + '/include']
CPPPATH += [cwd + '/rtu']

group = DefineGroup('FREEMODBUS/V1.5', src, depend = ['USER_USING_FREEMODBUS'], CPPPATH = CPPPATH)

Return('group')
